{
  "manifest_version": 3,
  "name": "Hover Summary",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "host_permissions": ["https://api.openai.com/"],
  "action": {
    "default_popup": "popup.html"
  }
}
